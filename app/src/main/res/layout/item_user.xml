<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cc"
                android:layout_marginTop="27dp"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/boy"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:visibility="gone"
                app:civ_border_width="10dp"
                app:civ_border_color="@color/yellow"
                android:id="@+id/img_on"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/tv_contact"
                android:layout_toRightOf="@+id/cc"
                android:layout_toEndOf="@+id/cc"
                android:layout_marginLeft="-15dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:civ_border_width="10dp"
                android:visibility="gone"
                app:civ_border_color="#bfbfbf"
                android:id="@+id/img_off"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/tv_contact"
                android:layout_toRightOf="@+id/cc"
                android:layout_toEndOf="@+id/cc"
                android:layout_marginLeft="-15dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="120dp"
                android:text="Name"
                android:fontFamily="@font/cantora_one"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"/>

            <TextView
                android:id="@+id/tv_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/cantora_one"
                android:text="BloodGroup"
                android:textColor="@color/colorRed"
                tools:ignore="RtlCompat" />

            <TextView
                android:visibility="gone"
                android:layout_below="@+id/tv_bg"
                android:layout_alignStart="@+id/tv_bg"
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Contact Number"
                android:fontFamily="@font/cantora_one"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                tools:ignore="RtlCompat" />
            <Button
                android:id="@+id/userdetail"
                android:layout_alignParentRight="true"
                android:layout_marginTop="43dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/cantora_one"
                android:background="@drawable/bgbuttonmain"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/cc"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>